<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonMain" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemName" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Rating" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_rating_star</item>
        <item name="android:indeterminateDrawable">@drawable/ic_rating_star</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
    </style>

    <color name="white">#FFFFFF</color>
</resources>